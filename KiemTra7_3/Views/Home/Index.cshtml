@{
    ViewData["Title"] = "Home Page";
    Layout = "LayoutHotel";
}

@model List<Cauthu>

@foreach(var item in Model)
{
<div class="col-md-6 col-lg-4 mb-5">
    <div class="hotel-room text-center">
            <a href="#" class="d-block mb-0 thumbnail"><img src="@Url.Content("../Hotel/images/"+item.Anh)" alt="Image" class="img-fluid"></a>
        <div class="hotel-room-body">
            <h3 class="heading mb-0"><a href="#">@item.HoVaTen</a></h3>
            <strong class="price">@item.QuocTich</strong>
        </div>
    </div>
</div>
}